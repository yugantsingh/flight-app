<h4>List of Bookings</h4>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Seat Class</th>
      <th>PNR Number</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.name %></td>
        <td><%= booking.email %></td>
        <td><%= booking.seat_class %></td>
        <td><%= booking.pnr_number %></td>
        <td>
          <%= link_to 'Show', booking, class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_booking_path(booking), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Destroy', booking, data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Booking', new_flight_booking_path(flight_id: @flight.id), class: 'btn btn-primary' %>
<%= link_to 'Back to Flights', flights_path, class: 'btn btn-secondary' %>
