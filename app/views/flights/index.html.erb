<div>
<h1>Flights</h1>

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th>Origin</th>
      <th>Destination</th>
      <th>Departure</th>
      <th>Arrival</th>
      <th>First Class Fare</th>
      <th>Business Class Fare</th>
      <th>Economy Class Fare</th>
      <th>Available Seats</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flights.each do |flight| %>
      <tr>
        <td><%= flight.origin %></td>
        <td><%= flight.destination %></td>
        <td><%= flight.departure %></td>
        <td><%= flight.arrival %></td>
        <td><%= flight.fcfare %></td>
        <td><%= flight.bcfare %></td>
        <td><%= flight.ecfare %></td>
        <td><%= flight.available_seats %></td>
        <td><%= link_to 'Show', flight, class: 'btn btn-info' %></td>
        <td>
        <% if current_user.admin? %>
            <%= link_to 'Edit', edit_flight_path(flight), class: 'btn btn-warning' %>
        <% end %>
        </td>
        <td>
        <% if current_user.admin? %>
            <%= link_to "Delete", flight, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.admin? %>
  <%= link_to 'New Flight', new_flight_path, class: 'btn btn-primary' %>
<% end %>


</div>